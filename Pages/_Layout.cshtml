<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
</head>
<body>
    <button id="sidebarToggleGlobal" class="sidebar-toggle-global" aria-label="Abrir menu">
        <i class="fas fa-bars"></i>
    </button>

<style>
    body {
        margin: 0;
        padding: 0;
        font-family: Arial, sans-serif;
    }
    /* Navbar removida */

    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        min-height: 100vh;
    }

    .page-wrapper {
        display: flex;
        min-height: 100vh;
    }

    .sidebar {
        width: 240px;
        background: #2c3e50;
        color: white;
        padding: 0;
        position: fixed;
        height: 100vh;
        left: 0;
        top: 0;
        box-shadow: 2px 0 10px rgba(0,0,0,0.3);
        z-index: 1000;
        transition: transform .3s ease;
    }

    .sidebar-header {
        padding: 25px 20px;
        background: #1a252f;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .sidebar-header i {
        font-size: 24px;
    }

    .sidebar-header h2 {
        font-size: 20px;
        font-weight: bold;
        margin: 0;
    }

    .sidebar-menu {
        list-style: none;
        padding: 20px 0;
    }

    .sidebar-menu li {
        margin: 5px 0;
    }

    .sidebar-menu a {
        display: flex;
        align-items: center;
        gap: 15px;
        padding: 15px 20px;
        color: #ecf0f1;
        text-decoration: none;
        transition: all 0.3s ease;
        font-size: 15px;
        font-weight: 500;
    }

    .sidebar-menu a:hover {
        background: #34495e;
        padding-left: 25px;
    }

    .sidebar-menu a.active {
        background: #667eea;
        border-left: 4px solid #fff;
    }

    .sidebar-menu i {
        font-size: 18px;
        width: 20px;
        text-align: center;
    }

    .main-content {
        flex: 1;
        margin-left: 240px;
        padding: 0;
    }

    .trivia-container {
        max-width: 1400px;
        margin: 0 auto;
        padding: 40px;
    }
    /* Botão global para mobile */
    .sidebar-toggle-global {
        display: none;
        position: fixed;
        top: 12px;
        left: 12px;
        background: rgba(26,37,47,0.85);
        border: 1px solid rgba(255,255,255,0.2);
        color: #fff;
        padding: 8px 10px;
        border-radius: 8px;
        z-index: 1101;
    }
    @@media (max-width: 768px) {
        .sidebar { transform: translateX(-100%); }
        .sidebar.open { transform: translateX(0); }
        .main-content { margin-left: 0; }
        .trivia-container { padding: 28px 22px; }
        .sidebar-toggle-global { display: inline-flex; align-items:center; justify-content:center; }
    }
</style>

<div class="page-wrapper">
    <div class="sidebar">
        <div class="sidebar-header">
            <i class="fas fa-gamepad"></i>
            <h2>Menu</h2>
        </div>
        <ul class="sidebar-menu">
            @{
                string path = ViewContext?.HttpContext?.Request?.Path.Value?.TrimEnd('/')?.ToLowerInvariant() ?? "/";
                if (path == "/" || path == "") path = "/index";
                bool Starts(string target)
                {
                    target = target.TrimEnd('/').ToLowerInvariant();
                    return path == target || path.StartsWith(target + "/");
                }
                string Active(string target) => Starts(target) ? "active" : string.Empty;
            }
            <li><a href="/Index" class="@Active("/index")"><i class="fas fa-home"></i> Início</a></li>
            <li><a href="/AskBot" class="@Active("/askbot")"><i class="fas fa-robot"></i> Pergunte ao Bot</a></li>
            <li><a href="/Feedback" class="@Active("/feedback")"><i class="fas fa-comments"></i> Feedback</a></li>
            <li><a href="/TriviaManagement" class="@Active("/triviamanagement")"><i class="fas fa-question-circle"></i> Gerenciar Trivia</a></li>
            <li><a href="/Privacy" class="@Active("/privacy")"><i class="fas fa-shield-alt"></i> Privacidade</a></li>
        </ul>
    </div>
    <div class="main-content">
        <div class="trivia-container">
            @RenderBody()
        </div>
    </div>
</div>

</body>
<script>
    (function(){
        const toggleGlobal = document.getElementById('sidebarToggleGlobal');
        const sidebar = document.querySelector('.sidebar');
        toggleGlobal?.addEventListener('click', () => {
            sidebar.classList.toggle('open');
        });
    })();
</script>
</html>