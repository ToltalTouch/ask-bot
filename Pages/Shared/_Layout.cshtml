<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AskBot</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ML_2025.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="app-layout">
        <aside class="sidebar">
            <div class="sidebar-top">
                <div class="sidebar-brand">⚔️ Arena</div>
            </div>
            <nav class="sidebar-menu">
                <a class="menu-item" asp-area="" asp-page="/Index"><span>Início</span></a>
                <a class="menu-item" asp-area="" asp-page="/AskBot"><span>Pergunte ao Bot</span></a>
                <a class="menu-item" asp-area="" asp-page="/Feedback"><span>Feedback</span></a>
                <a class="menu-item" asp-area="" asp-page="/TriviaManagement"><span>Gerenciar Trivia</span></a>
                <a class="menu-item" asp-area="" asp-page="/Privacy"><span>Privacidade</span></a>
            </nav>
        </aside>

        <div class="main-content">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>

            <footer class="border-top footer text-muted">
                <div class="container">
                    &copy; 2025 - ML_2025 - <a asp-area="" asp-page="/Privacy">Privacy</a>
                </div>
            </footer>
        </div>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - ML_2025 - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>