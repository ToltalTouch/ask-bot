                <div class="stat-label">Taxa de Aprova√ß√£o</div>
            </div>
        </div>
    </section>

    <!-- Arquivos CSV -->
    <section class="files-section">
        <h2>üìÅ Arquivos Gerados</h2>
        <div class="files-info">
            <div class="file-card">
                <div class="file-icon">üìã</div>
