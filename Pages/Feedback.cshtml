                <div class="stat-label">Total de Perguntas</div>
            </div>
            <div class="stat-card success">
                <div class="stat-icon">‚úÖ</div>
                <div class="stat-number">@Model.Stats.UsefulRequests</div>
                <div class="stat-label">Marcadas como √öteis</div>
            </div>
            <div class="stat-card danger">
                <div class="stat-icon">‚ùå</div>
                <div class="stat-number">@Model.Stats.NotUsefulRequests</div>
                <div class="stat-label">N√£o √öteis</div>
            </div>
            <div class="stat-card info">
                <div class="stat-icon">‚è≥</div>
                <div class="stat-number">@Model.Stats.NoFeedbackRequests</div>
                <div class="stat-label">Sem Feedback</div>
            </div>
        </div>

        <div class="stats-cards">
            <div class="stat-card">
                <div class="stat-icon">üéØ</div>
                <div class="stat-number">@Model.Stats.AverageConfidence.ToString("P0")</div>
                <div class="stat-label">Confian√ßa M√©dia</div>
            </div>
            <div class="stat-card">
                <div class="stat-icon">üìö</div>
                <div class="stat-number">@Model.Stats.DatasetSourceCount</div>
                <div class="stat-label">Do Dataset</div>
            </div>
            <div class="stat-card">
                <div class="stat-icon">ü§ñ</div>
                <div class="stat-number">@Model.Stats.MlSourceCount</div>
