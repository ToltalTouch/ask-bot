                        <th>Fonte</th>
                        <th>Confian√ßa</th>
                        <th>Feedback</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.RecentFeedback)
                    {
                        <tr>
                            <td>@item.Timestamp.ToString("dd/MM HH:mm")</td>
                            <td class="question-cell">@item.Question</td>
                            <td class="answer-cell">
                                @if (item.Answer)
                                {
                                    <span class="badge badge-success">‚úÖ Verdadeiro</span>
                                }
                                else
                                {
                                    <span class="badge badge-danger">‚ùå Falso</span>
                                }
